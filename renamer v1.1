import os

path = 'D:\\Engleski materijal\\Kurs Engl\\Materijal'

ext = ".png"
pattern_name = "download"

def rinejm(file,file_list):
    for item in file_list:
        file=file.replace(item,"")
    return int(file)

dikt={}
# r=root, d=directories, f = files
for r, d, f in os.walk(path):
    file_list=[pattern_name,
                "(",
                ")",
                ext
    ]
    for file in f:
        if ext in file and pattern_name in file:
            file1=str(os.path.join(r, file))
            if file == pattern_name+ext:
                file = "01"+ext

            else:
                file=rinejm(file,file_list)
                file+=1

                if len(str(file)) == 2:
                    file= str(file)+ext

                else:

                    file = "0"+str(file)+ext
            dikt.update( {file1 : str((os.path.join(r, file)))} )


for k,v in dikt.items():
    os.rename(k,v)
